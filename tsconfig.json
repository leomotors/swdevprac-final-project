{
  "compilerOptions": {
    // Module Resolution and Environment
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",

    // Output
    "noEmit": true,

    // Type Checking
    "strict": true,

    // Development
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", "**/*.js"]
}
